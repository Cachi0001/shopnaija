{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/node",
        "config": {
          "includeFiles": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "public/**", "index.html"]
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/$1"
      }
    ],
    "scripts": {
      "build": "npm install --production=false && vite build"
    }
  }
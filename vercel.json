{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/node",
        "config": {
          "includeFiles": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "public/**", "index.html", "dist/**"]
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/dist/$1"
      },
      {
        "src": "/",
        "dest": "/dist/index.html"
      }
    ]
  }